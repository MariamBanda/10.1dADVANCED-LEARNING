<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40C4FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:background="@drawable/rounded_back_button"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade your experience"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Starter Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2196F3"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp">

            <TextView
                android:text="Starter"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Improved Quiz generation\n$0.99"
                android:textColor="#BBDEFB"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/starterBtn"
                android:text="Purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#69F0AE"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1976D2"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp">

            <TextView
                android:text="Intermediate"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Best Seller! Improved Quiz generation\n$2.99"
                android:textColor="#BBDEFB"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/intermediateBtn"
                android:text="Purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#69F0AE"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0D47A1"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp">

            <TextView
                android:text="Advanced"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Premium Quiz generation\n$4.99"
                android:textColor="#BBDEFB"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/advancedBtn"
                android:text="Purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#69F0AE"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
